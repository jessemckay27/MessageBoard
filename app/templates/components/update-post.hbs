{{yield}}
  <h2>Edit Question</h2>
  <div class="newpost-wrap">
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name" class="form-control" placeholder=post.name}}
      </div>
      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question" class="form-control" placeholder=post.question}}
      </div>
      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes" class="form-control" placeholder=post.notes}}
      </div>
      <button class="btn" {{action 'update' post}}>Update</button>
    </form>
  </div>
