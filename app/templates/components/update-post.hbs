{{yield}}
  <h2>Edit Your Post</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name" placeholder=post.name}}
      </div>

      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question" placeholder=post.question}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=city id="city" placeholder=post.notes}}
      </div>
      <button {{action 'update' post}}>Update</button>
    </form>
  </div>
