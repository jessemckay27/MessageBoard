{{yield}}

{{#if addNewReview}}
<h2>Add Answer</h2>
  <div class="newpost-wrap review-wrap">
    <form>
      <div class="form-group">
        <label for="author">Name: </label>
        {{input value=author class="form-control" id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Answer: </label>
        {{input value=content class="form-control" id="content"}}
      </div>
      <button class="btn" {{action 'saveReview'}}>Save</button>
    </form>
  </div>
{{else}}
  <div id="new-answer">
    <h2>Answer Question</h2>
    <button class="btn answer-btn"{{action 'reviewFormShow'}}>New Review</button>
  </div>
{{/if}}
