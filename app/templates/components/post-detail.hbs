{{yield}}
<h2>Question</h2>
<div class="newpost-wrap bottom-fix">
  <div>Name:  {{post.name}}</div>
  <div>Question:  {{post.question}}</div>
  <div>Notes: {{post.notes}}</div>
  <button class="btn" {{action 'delete' post}}>Delete Question</button>
</div>
<div>
  {{#each post.reviews as |review|}}
    {{review-tile review=review}}
  {{/each}}
</div>
