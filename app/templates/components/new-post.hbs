{{yield}}
<h2>Add Question</h2>
<div class="newpost-wrap">
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name" placeholder=post.name}}
    </div>

    <div class="form-group">
      <label for="question">Question</label>
      {{input value=question id="question" placeholder=post.question}}
    </div>

    <div class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id="notes" placeholder=post.notes}}
    </div>
    <button {{action 'savePost' post}}>Save</button>
  </form>
</div>
